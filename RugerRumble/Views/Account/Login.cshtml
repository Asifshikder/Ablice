@model RugerRumble.Models.ViewModel.AccountViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}


<main class="main-content" style="background-color: #2b2b2b;box-shadow:15px;">
    <div class="container">
        <div class="page">
            <section>
                @*background-color: black;*@
                <div style=" border-radius: 20px">
                    <div style="text-align:center">
                        <header style="padding-top:20px">
                            <h2 style="color:orangered;font-size:39px;">LOGIN</h2>
                        </header>
                    </div>
                    <div>
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="row" style="padding-bottom:50px;">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-8">
                                    <div class="">
                                        <label style="color:white;font-size:20px">Email</label>
                                        <br />
                                        <input asp-for="Email" required type="text" style="border-color:red;width:550px;color:white" placeholder="Enter your email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="">
                                        <label style="color:white;font-size:20px">Password</label>
                                        <br />
                                        <input asp-for="Password" required type="password" style="border-color:red;width:550px;color:white" placeholder="Enter your password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <span asp-validation-for="IncorrectInput" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        @Html.HiddenFor(model => Model.ReturnUrl)
                                    </div>
                                    <div style="padding-top:30px;">
                                        <input type="submit" class="btn btn-block" value="Login" style="background-color:blue;color:white;width:150px">
                                        <a href="/account/ForgotPassword" style="color:lightgreen;padding-left:280px">Forgot password?</a>
                                    </div>
                                    <div class="form-group">
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>