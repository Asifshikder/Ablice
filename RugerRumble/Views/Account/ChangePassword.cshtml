@model RugerRumble.Models.ViewModel.AccountViewModel.PasswordVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}


<main class="main-content" style="background-color: #2b2b2b;box-shadow:15px;">
    <div class="container">
        <div class="page">
            <section>
                <div style="border-radius: 20px">
                    <div style="text-align:center">
                        <header style="padding-top:20px">
                            <h2 style="color:orangered;font-size:39px;">Reset password</h2>
                        </header>
                    </div>
                    <div>
                        <form asp-controller="Account" asp-action="ChangePasswordConfirm" method="post">
                            <div class="row" style="padding-bottom:50px;">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-8">
                                    <div class="">
                                        <label style="color:white;font-size:20px">Old Password</label>
                                        <br />
                                        <input asp-for="OldPassword" required type="password" style="border-color:red;width:550px;color:white" placeholder="Enter your old  password">
                                    </div>
                                    <div class="form-group">
                                        <span asp-validation-for="OldPassword" style="color:yellow"></span>
                                    </div>
                                    <div class="">
                                        <label style="color:white;font-size:20px">New Password</label>
                                        <br />
                                        <input asp-for="Password" required type="password" style="border-color:red;width:550px;color:white" placeholder="Enter your new password">
                                    </div>
                                    <div class="form-group">
                                        <span asp-validation-for="Password" style="color:yellow"></span>
                                    </div>
                                    <p style="color:red">@Html.DisplayFor(model=>Model.Errormessage)</p>                                    
                                    <div class="form-group">
                                        @Html.HiddenFor(model => Model.UserID)
                                        @Html.HiddenFor(model => Model.BaseCode)
                                    </div>
                                    <div style="padding-top:30px;">
                                        <input type="submit" class="btn btn-block" value="Submit" style="background-color:blue;color:white;width:550px">
                                    </div>
                                    <div class="form-group">
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>