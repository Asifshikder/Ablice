@model RugerRumble.Models.ViewModel.AccountViewModel.RecoverVM
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<main class="main-content" style="background-color: #2b2b2b;box-shadow:15px;">
    <div class="container">
        <div class="page">
            <section>
                <div style="border-radius: 20px">
                    <div style="text-align:center">
                        <header style="padding-top:20px">
                            <h2 style="color:orangered;font-size:39px;">Password Reset!</h2>
                            <h4 style="color:forestgreen">Please enter your email. We will sent a link to reset password!</h4>
                        </header>
                    </div>
                    <div>
                        <form asp-controller="Account" asp-action="ResetPasswordMail" method="post">
                            <div class="row" style="padding-bottom:50px;">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-8">
                                    <div class="">
                                        <div class="">
                                            <label style="color:white;font-size:20px">Email</label>
                                            <br />
                                            <input asp-for="Email" required type="text" style="border-color:red;width:550px;color:white" placeholder="Enter your email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <span asp-validation-for="Email" style="color:red"></span>
                                        </div>
                                        <div style="padding-top:30px;">
                                            <input type="submit" class="btn btn-block" value="Sent Email" style="background-color:blue;color:white;width:150px">

                                        </div>
                                        <div class="form-group">
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>
